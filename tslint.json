{
    "extends": ["tslint:recommended", "tslint-react", "tslint-blueprint"],
    "linterOptions": {
        "exclude": [
            "src/serviceWorker.ts"
        ]
    },
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "jsx-wrap-multiline": true,
        "jsx-no-bind": true,
        "jsx-no-lambda": true,
        "jsx-self-close": true,
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}